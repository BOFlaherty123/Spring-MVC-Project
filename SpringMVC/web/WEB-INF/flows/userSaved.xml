<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var name="user" class="springmvc.model.User"/>

    <action-state id="saveUser">
        <evaluate expression="userController.saveUser(user)"/>
        <transition to="userDecision"/>
    </action-state>

    <decision-state id="userDecision">
        <if test="userController.saveUser(user)" then="userSaved" else="userFailed"/>
    </decision-state>
    
    <view-state id="userSaved" model="user">
        <transition on="submit" to="formSubmit"/>
    </view-state>

    <view-state id="userFailed"/>

    <view-state id="formSubmit">
        <on-entry>
            <evaluate expression="userController.saveUser(user)" />
        </on-entry>
        <transition to="endState"/>
    </view-state>

    <end-state id="endState"/>

</flow>